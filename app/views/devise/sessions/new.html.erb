<div class="form-signin form_signin_custom">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="user_image_container_signup">
      <%= image_tag 'icon.png', class:"user_image" %>
    </div>

    <h1 class="h3 mb-3 font-weight-normal form-title-signup">ログイン</h1>
    <%= f.email_field :email, autocomplete: "email", id:"inputEmail", class:"form-control registrations-input", placeholder:"Email address" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", id:"inputPassword", class:"form-control registrations-input .registrations-input-last" %>

    <% if devise_mapping.rememberable? %>
      <div class="field remember_me_custom">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>


    <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block" %>

  <% end %>
</div>

<div class="login_sub_links">
  <%= render "devise/shared/links" %>
</div>
